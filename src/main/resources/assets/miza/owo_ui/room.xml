<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="./../../../../../../owo-lib.xsd">
    <components>
        <flow-layout direction="vertical" id="body">
            <children>
                <grid-layout columns="3" rows="1" id="header">
                    <children>
                        <flow-layout column="0" row="0" direction="horizontal">
                            <children>
                                <button id="previous-screen-button">
                                    <text>Назад</text>

                                    <margins>
                                        <left>5</left>
                                    </margins>
                                </button>
                            </children>

                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>center</vertical-alignment>

                            <sizing>
                                <horizontal method="fill">33</horizontal>
                                <vertical method="fill">100</vertical>
                            </sizing>
                        </flow-layout>
                    </children>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">7</vertical>
                    </sizing>
                </grid-layout>

                <flow-layout direction="vertical" id="working-area">
                    <horizontal-alignment>center</horizontal-alignment>

                    <margins>
                        <all>30</all>
                    </margins>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">86</vertical>
                    </sizing>
                </flow-layout>
            </children>

            <surface>
                <flat>#C0101010</flat>
            </surface>
        </flow-layout>
    </components>

    <templates>
        <template name="title-label">
            <label>
                <text>Настройки комнаты</text>
            </label>
        </template>

        <template name="name-change">
            <flow-layout direction="horizontal">
                <children>
                    <label>
                        <text>Название</text>

                        <vertical-text-alignment>center</vertical-text-alignment>
                        <horizontal-text-alignment>center</horizontal-text-alignment>

                        <sizing>
                            <horizontal method="fill">30</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>
                    </label>

                    <text-box id="name-change-text-box">
                        <sizing>
                            <horizontal method="fill">70</horizontal>
                            <vertical method="fill">100</vertical>
                        </sizing>
                    </text-box>
                </children>

                <margins>
                    <top>10</top>
                </margins>

                <sizing>
                    <horizontal method="fill">30</horizontal>
                    <vertical method="fill">5</vertical>
                </sizing>
            </flow-layout>
        </template>

        <template name="copy-token-button">
            <button>
                <text>Скопировать токен</text>

                <margins>
                    <top>10</top>
                </margins>
            </button>
        </template>

        <template name="copy-user-token-button">
            <button>
                <text>Скопировать пользовательский токен</text>

                <margins>
                    <top>10</top>
                </margins>
            </button>
        </template>

        <template name="copy-admin-token-button">
            <button>
                <text>Скопировать токен администратора</text>

                <margins>
                    <top>10</top>
                </margins>
            </button>
        </template>

        <template name="leave-room-button">
            <button>
                <text>Покинуть комнату</text>

                <margins>
                    <top>10</top>
                </margins>
            </button>
        </template>
    </templates>
</owo-ui>